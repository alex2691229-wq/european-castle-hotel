{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "api", "**/*.test.ts", "client/src/pages/admin/**/*.tsx", "client/src/pages/NewsDetail.tsx", "client/src/pages/RoomDetail.tsx", "client/src/pages/BookingDetail.tsx", "client/src/components/AIChatBot.tsx", "client/src/components/AIChatBox.tsx", "client/src/components/Map.tsx", "client/src/pages/Home.tsx", "client/src/main.tsx"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
